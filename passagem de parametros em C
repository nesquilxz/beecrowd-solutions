#include <stdio.h>

// Passagem por valor
void add10_valor(int x) {
    x = x + 10;
}

// Passagem por ponteiro
void add10_ponteiro(int *x) {
    *x = *x + 10;
}

int main() {
    int a = 5, b = 5;

    printf("Antes:\n");
    printf("a = %d, b = %d\n", a, b);

    add10_valor(a);      // não muda 'a'
    add10_ponteiro(&b);  // muda 'b' porque passamos o endereço

    printf("Depois:\n");
    printf("a = %d, b = %d\n", a, b);

    return 0;
}
